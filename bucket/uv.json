{
    "##": "File originally taken from https://github.com/ScoopInstaller/Main/blob/master/bucket/uv.json and edited",
    "version": "0.7.8",
    "description": "An extremely fast Python package installer and resolver, written in Rust.",
    "homepage": "https://docs.astral.sh/uv/",
    "license": "Apache-2.0|MIT",
    "depends": "python",
    "architecture": {
        "64bit": {
            "url": "https://github.com/astral-sh/uv/releases/download/0.7.8/uv-x86_64-pc-windows-msvc.zip",
            "hash": "355736ddf9a01ab9da918b35470027c12128d7ed1d7f54f54771507d79529679"
        },
        "32bit": {
            "url": "https://github.com/astral-sh/uv/releases/download/0.7.8/uv-i686-pc-windows-msvc.zip",
            "hash": "0d4b01372ca972543cd40366bb5480bb457e79dcf45b5f662721d709d6932dbd"
        }
    },
    "pre_install": "if (-not (Test-Path \"$persist_dir\\uv.toml\")) { Set-Content \"$dir\\uv.toml\" '{}' -Encoding Ascii | Out-Null }",
    "bin": [
        "uv.exe",
        "uvx.exe"
    ],
    "env_add_path": "tools",
    "persist": [
        "tools",
        "uv.toml"
    ],
        "checkver": {
            "github": "https://github.com/astral-sh/uv"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/astral-sh/uv/releases/download/$version/uv-x86_64-pc-windows-msvc.zip"
            },
            "32bit": {
                "url": "https://github.com/astral-sh/uv/releases/download/$version/uv-i686-pc-windows-msvc.zip"
            }
        },
        "hash": {
            "url": "$url.sha256"
        }
    }
}
